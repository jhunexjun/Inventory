  <% include ../partials/head %>
  <body>
  <div class="container mt-2">
    <div class="row">
      <div class="col-sm-6">
          <h2>Registration</h2>
      </div>
      <div class="col-sm-6">
          <h4><a href="/"><< Back</a></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <form method="POST" action="/register">
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="firstName" class="col-form-label col-form-label-sm">First name</label>
              <input type="text" class="form-control form-control-sm" id="firstName" name="firstName" value="<%=postData.firstName %>" autofocus="autofocus">
            </div>
            <div class="form-group col-md-6">
              <label for="lastName" class="col-form-label col-form-label-sm">Last name</label>
              <input type="text" class="form-control form-control-sm" id="lastName" name="lastName" value="<%=postData.lastName %>">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="gender" class="col-form-label col-form-label-sm">Gender</label>
              <select id="gender" class="form-control form-control-sm" name="gender">
                <option <%
                          if (!postData.hasOwnProperty('gender')) { %>
                            selected="selected"
                        <% } %> value="-1">--select--
                </option>
                <option <%
                          if (postData.hasOwnProperty('gender')) {
                            if (postData.gender == 'M') { %>
                              selected="selected"
                        <%  } %>
                        <% } %> value="M">Male
                </option>
                <option <%
                          if (postData.hasOwnProperty('gender')) {
                            if (postData.gender == 'F') { %>
                              selected="selected"
                        <%  } %>
                        <% } %> value="F">Female
                </option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="address" class="col-form-label col-form-label-sm">Address</label>
            <input type="text" class="form-control form-control-sm" id="address" name="address" value="<%=postData.address %>">
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="city" class="col-form-label col-form-label-sm">City/municipality</label>
              <input type="text" class="form-control form-control-sm" id="city" name="city" value="<%=postData.city %>">
            </div>

            <div class="form-group col-md-4">
              <label for="province" class="col-form-label col-form-label-sm">Province</label>
              <select id="province" class="form-control form-control-sm" name="province">
                  <option value="-1"
                    <% if (!postData.hasOwnProperty('province')) { %>
                          selected='selected'
                  <% } %>>Choose...</option>
                <% provincesName.forEach(function(provinceName) { %>
                  <option value="<%=provinceName._id %>"
                    <% if (postData.province == provinceName._id) { %>
                      selected='selected'
                  <% } %>>
                    <%=provinceName.province %>
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-group col-md-2">
              <label for="zipCode" class="col-form-label col-form-label-sm">Zip code</label>
              <input type="text" class="form-control form-control-sm" id="zipCode" name="zipCode" value="<%=postData.zipCode %>">
            </div>
          </div>
          <hr>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="Email" class="col-form-label col-form-label-sm">Email</label>
              <input type="email" class="form-control form-control-sm" id="Email" name="email" value="<%=postData.email %>">
            </div>
            <div class="form-group col-md-4">
              <label for="password" class="col-form-label col-form-label-sm">Password</label>
              <input type="password" class="form-control form-control-sm" id="password" name="password">
            </div>
            <div class="form-group col-md-4">
              <label for="confirmPassword" class="col-form-label col-form-label-sm">Confirm</label>
              <input type="password" class="form-control form-control-sm" id="confirmPassword" name="confirmPassword">
            </div>

          </div>

          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </div>
    </div>
  </div>

  <% include ../partials/foot %>
  </body>
</html>
