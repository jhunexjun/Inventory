<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <%- include('./partials/top-bar', {protocolAndHostname: protocolAndHostname}); %>

    <div class="uk-container">

      <div class="uk-child-width-expand" uk-grid>
        <div></div>
        <div class="uk-width-2-3 uk-text-center" style="margin-top: 25px;">
          <form class="uk-search uk-search-default" action="/searchUser">
            <span href="" uk-search-icon></span>
            <input class="uk-search-input" type="search" placeholder="Search User" name="search" value="<%= search %>">
          </form>
        </div>
        <div></div>
      </div>

      <div class="uk-child-width" uk-grid>        
        <div class="uk-width-1-1">
          <table class="uk-table uk-table-divider">
            <caption>List of System Users</caption>
            <thead>
              <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user._id %></td>
                  <td><%= user.name.fName %></td>
                  <td><%= user.name.lName %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

    </div>

    <% include ./partials/foot %>
  </body>
</html>
