<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/top-bar %>

    <div class="uk-container">

      <div class="uk-child-width-expand" uk-grid>
        <div></div>
        <div class="uk-width-2-3 uk-text-center" style="margin-top: 25px;">
          <form class="uk-search uk-search-default" action="/searchUser">
            <span href="" uk-search-icon></span>
            <input class="uk-search-input" type="search" placeholder="Search User" name="search" value="<%= search %>" uk-tooltip="title: To show all, press enter with empty textbox.; pos: top-right">
          </form>
        </div>
        <div></div>
      </div>

      <div class="uk-child-width" uk-grid>        
        <div class="uk-width-1-1">
          <div class="uk-overflow-auto">
            <table class="uk-table uk-table-divider uk-table-small uk-table-hover">
              <caption>List of System Users</caption>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th colspan="2">Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(function(user) { %>
                  <tr>
                    <td><%= user._id %></td>
                    <td><%= user.name.fName %></td>
                    <td><%= user.name.lName %></td>
                    <td><%= user.email %></td>
                    <td><a class="uk-link-text" href="/editUser?userId=<%= user._id%>">Edit</a></td>
                    <td><a class="uk-link-text" href="#">Delete</a></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

    <% include ./partials/foot %>
  </body>
</html>
